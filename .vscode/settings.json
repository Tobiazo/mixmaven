{
  "java.configuration.updateBuildConfiguration": "automatic",
  "[java]": {
    "editor.tabSize": 4
  },
  "java.test.config": [
    {
      "name": "coreTesting",
      "vmArgs": []
    },
    {
      "name": "modules-template testing",
      "vmArgs": [
        "--add-opens",
        "mixmaven.ui/ui=ALL-UNNAMED",
        "--add-exports",
        "javafx.graphics/com.sun.javafx.application=ALL-UNNAMED"
      ]
    },
    {
      "name": "javafx-template testing",
      "vmArgs": [
        "--add-opens",
        "app/app=ALL-UNNAMED",
        "--add-exports",
        "javafx.graphics/com.sun.javafx.application=ALL-UNNAMED"
      ]
    },
    {
      "name": "packages-template testing",
      "vmArgs": [
        "--add-opens",
        "app/core=ALL-UNNAMED",
        "--add-opens",
        "app/ui=ALL-UNNAMED",
        "--add-exports",
        "javafx.graphics/com.sun.javafx.application=ALL-UNNAMED"
      ]
    }
  ],
  "java.compile.nullAnalysis.mode": "automatic",
  "java.debug.settings.onBuildFailureProceed": true,
  "java.format.settings.url": "https://raw.githubusercontent.com/google/styleguide/gh-pages/eclipse-java-google-style.xml",
  "java.checkstyle.configuration": "${workspaceFolder}/mixmaven/checkstyle.xml",
  "java.checkstyle.version": "10.12.3",
}
